<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Glass Website</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <main>
      <section class="glass">
        <!-- ... -->
        <div class="games">
          <div class="status">
            <h1 id="dashboard-title">Dashboard</h1>
            <input type="text" />
            <select id="sort">
              <option value="">Sort by</option>
              <option value="company">Company</option>
              <option value="location">Location</option>
              <option value="industry">Industry</option>
              <option value="start_date">Start Date</option>
              <option value="semester">Semester</option>
            </select>
          </div>
          <div class="cards" id="internship-list">
            <% internships.forEach(function(internship) { %>
              <div class="card" data-id="<%= internship.id %>">
                <div class="card-info">
                  <h2 data-field="company"><%= internship.company_name %></h2>
                  <p data-field="location"><%= internship.location %></p>
                  <p data-field="industry"><%= internship.industry %></p>
                  <p data-field="start_date"><%= internship.start_date %></p>
                  <p data-field="semester"><%= internship.semester %></p>
                  <p><%= internship.tag_name %></p>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </section>
    </main>
    <div class="circle1"></div>
    <div class="circle2"></div>
    <script src="sort.js"></script>
  </body>
</html>